<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maxim-scale=1, user-scalable=no" />
    <title>@ViewData["Title"] - BORIS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BORIS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm mb-3 white-on-red">
            <div class="container-fluid d-flex flex-row justify-content-evenly">
                <div id="navbar-left" class="navbar-div">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        IT-Akademie Dr. Heuer
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div id="navbar-center" class="navbar-div flex-fill">
                    <div class="navbar-collapse collapse d-sm-inline-flex">
                        <ul class="navbar-nav flex-grow-1 d-sm-inline-flex justify-content-around">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Umschulung" asp-action="Index">Umschulungen</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Weiterbildung" asp-action="Index">Weiterbildungen</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="ContactForm">Kontakt</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div id="navbar-right" class="navbar-div">
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BORIS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    -->
    @Html.Footer(new List<string> { "footer", "white-on-red" })

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
