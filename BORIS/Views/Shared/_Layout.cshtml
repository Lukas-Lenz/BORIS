<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maxim-scale=1, user-scalable=no" />
	<title>@ViewData["Title"] - BORIS</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BORIS.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar sticky-top white-on-red">
			<a class="navbar-brand" asp-area="" asp-controller="Home">IT-Akademie Dr. Heuer</a>
			<ul class="nav">
				<li class="nav-item">
					<a class="nav-link" asp-controller="Umschulung" asp-action="Index">Umschulungen</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-area="" asp-controller="Weiterbildung" asp-action="Index">Weiterbildungen</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-area="" asp-controller="Contact" asp-action="ContactForm">Kontakt</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
				</li>
			</ul>
		</nav>
	</header>

	<main role="main" class="container-fluid px-5 py-4">
		@RenderBody()
	</main>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
